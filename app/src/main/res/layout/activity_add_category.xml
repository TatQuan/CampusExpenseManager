<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F7">

    <!-- App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#E91E63"
        app:title="Add Category"
        app:titleTextColor="#FFFFFF"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nội dung chính -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:padding="24dp"
            android:background="#FFFFFF"
            android:elevation="2dp">

            <!-- Thanh tiêu đề -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Category"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp" />

            <!-- Ô nhập tên hạng mục -->
            <EditText
                android:id="@+id/et_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category name"
                android:background="@drawable/edittext_bg_rounded"
                android:padding="12dp"
                android:layout_marginBottom="20dp" />

            <!-- Ghi chú -->
            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:background="@drawable/edittext_bg_rounded"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <!-- Chọn màu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Color"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Hàng 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10dp">

                    <View android:id="@+id/btn_blue"   android:layout_width="36dp" android:layout_height="36dp" android:background="@drawable/ic_blue" android:layout_margin="6dp"/>
                    <View android:id="@+id/btn_pink"   android:layout_width="36dp" android:layout_height="36dp" android:background="@drawable/ic_pink" android:layout_margin="6dp"/>
                    <View android:id="@+id/btn_black"  android:layout_width="36dp" android:layout_height="36dp" android:background="@drawable/ic_black" android:layout_margin="6dp"/>
                    <View android:id="@+id/btn_yellow" android:layout_width="36dp" android:layout_height="36dp" android:background="@drawable/ic_yellow" android:layout_margin="6dp"/>
                    <View android:id="@+id/btn_red"    android:layout_width="36dp" android:layout_height="36dp" android:background="@drawable/ic_red" android:layout_margin="6dp"/>
                </LinearLayout>

                <!-- Hàng 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <View android:id="@+id/btn_green"  android:layout_width="36dp" android:layout_height="36dp" android:background="@drawable/ic_green" android:layout_margin="6dp"/>
                    <View android:id="@+id/btn_purple" android:layout_width="36dp" android:layout_height="36dp" android:background="@drawable/ic_purple" android:layout_margin="6dp"/>
                    <View android:id="@+id/btn_orange" android:layout_width="36dp" android:layout_height="36dp" android:background="@drawable/ic_orange" android:layout_margin="6dp"/>
                    <View android:id="@+id/btn_brown"  android:layout_width="36dp" android:layout_height="36dp" android:background="@drawable/ic_brown" android:layout_margin="6dp"/>
                    <View android:id="@+id/btn_gray"  android:layout_width="36dp" android:layout_height="36dp" android:background="@drawable/ic_gray" android:layout_margin="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Nút lưu nhỏ gọn -->
            <Button
                android:id="@+id/btn_add_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Category"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#E91E63"
                android:textSize="17dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
