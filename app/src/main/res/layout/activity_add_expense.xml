<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F7">

    <!-- Toàn bộ nội dung cuộn -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ngày -->
            <EditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:layout_marginTop="50dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:textColor="#000" />

        <!-- Ghi chú -->
        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:textColor="#000" />

        <!-- Tiền chi -->
        <EditText
            android:id="@+id/et_expenditure_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expenditure amount"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:textColor="#000" />

        <!-- Danh mục -->

        <!-- Grid các danh mục -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="Category"
            android:textColor="#000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="2"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Các item -->
            <!-- Thức ăn -->
            <LinearLayout
                android:id="@+id/btn_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_food" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Food"
                    android:textColor="#E91E63"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Quần áo -->
            <LinearLayout
                android:id="@+id/btn_clothing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_clothing" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Clothing"
                    android:textColor="#E91E63"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Mỹ phẩm -->
            <LinearLayout
                android:id="@+id/btn_cosmetics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_cosmetics" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Cosmetics"
                    android:textColor="#E91E63"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Tiền nhà -->
            <LinearLayout
                android:id="@+id/btn_rent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_rent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Rent"
                    android:textColor="#E91E63"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Y tế -->
            <LinearLayout
                android:id="@+id/btn_healthcare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_healthcare" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Healthcare"
                    android:textColor="#E91E63"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Giáo dục -->
            <LinearLayout
                android:id="@+id/btn_education"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_education" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Education"
                    android:textColor="#E91E63"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Tiền điện -->
            <LinearLayout
                android:id="@+id/btn_electricity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_electricity" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Electricity"
                    android:textColor="#E91E63"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Đi lại-->
            <LinearLayout
                android:id="@+id/btn_transportation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_transportation" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Transportation"
                    android:textColor="#E91E63"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Chỉnh sửa danh mục-->
            <LinearLayout
                android:id="@+id/btn_edit_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Edit Category"
                    android:textColor="#E91E63"
                    android:textSize="14sp" />
            </LinearLayout>
        </GridLayout>

        <!-- Nút nhập -->
        <Button
            android:id="@+id/btn_add_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#E91E63"
            android:paddingHorizontal="50dp"
            android:paddingVertical="14dp"
            android:text="Add Expense"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>
    </ScrollView>

    <!-- Thanh điều hướng dưới cùng -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation_bar" />
</RelativeLayout>