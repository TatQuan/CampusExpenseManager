<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F7">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ngày -->
            <EditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:layout_marginTop="50dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textColor="#000" />

            <!-- Checkbox cho chi tiêu định kỳ -->
            <CheckBox
                android:id="@+id/checkboxRecurring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recurring"
                android:textColor="#000"
                android:layout_marginTop="8dp" />

            <!-- Start Date (ẩn khi không chọn Recurring) -->
            <EditText
                android:id="@+id/et_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Date"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:textColor="#000"
                android:visibility="gone"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />

            <!-- End Date (ẩn khi không chọn Recurring) -->
            <EditText
                android:id="@+id/et_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="End Date"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:textColor="#000"
                android:visibility="gone"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />

            <!-- Ghi chú -->
            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:textColor="#000" />

            <!-- Tiền chi -->
            <EditText
                android:id="@+id/et_expenditure_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Expenditure amount"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:textColor="#000" />

            <!-- Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="Category"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <!-- Grid các danh mục -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="true"
                android:padding="8dp"
                tools:layoutManager="GridLayoutManager"
                tools:listitem="@layout/item_category_choose"
                tools:spanCount="5" />

            <!-- Nút thêm chi tiêu -->
            <Button
                android:id="@+id/btn_add_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#E91E63"
                android:paddingHorizontal="50dp"
                android:paddingVertical="14dp"
                android:text="Add Expense"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
