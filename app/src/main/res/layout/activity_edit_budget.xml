<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF5F7"
    android:fitsSystemWindows="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEditBudget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvBudgetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Budget"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvBudgetInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category â€¢ 10/2025"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget amount (VND)"
                android:textStyle="bold"
                android:textColor="#555555" />

            <EditText
                android:id="@+id/et_budget_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Enter budget"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:id="@+id/tvCurrentSpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current spent: 0 VND"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btn_cancel_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:backgroundTint="#BDBDBD"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_save_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:backgroundTint="#E91E63"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
