<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F7">

    <!-- Toàn bộ nội dung cuộn -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CardView Trung bình chi tiêu -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Expenditure"
                        android:textColor="#E91E63"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Spending Statistics"
                        android:textColor="#555555"
                        android:textSize="14dp" />

                    <!-- Biểu đồ cột mô phỏng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="8dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:weightSum="7">

                        <View android:layout_width="0dp" android:layout_height="70dp" android:layout_weight="1" android:background="#F48FB1" />
                        <View android:layout_width="0dp" android:layout_height="65dp" android:layout_weight="1" android:background="#F48FB1" />
                        <View android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:background="#F48FB1" />
                        <View android:layout_width="0dp" android:layout_height="55dp" android:layout_weight="1" android:background="#F48FB1" />
                        <View android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:background="#F48FB1" />
                        <View android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:background="#F48FB1" />
                        <View android:layout_width="0dp" android:layout_height="20dp" android:layout_weight="1" android:background="#F48FB1" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Danh sách chi tiêu theo hạng mục -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp">

                    <!-- Thức ăn -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_food"
                            android:backgroundTint="#FCE4EC"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_food"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            android:textColor="#E91E63"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_amount_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:layout_marginEnd="6dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F1F1F1" />

                    <!-- Clothing -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_clothing"
                            android:backgroundTint="#FFF3E0"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_clothing"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Clothing"
                            android:textColor="#E91E63"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_amount_clothing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:layout_marginEnd="6dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F1F1F1" />

                    <!-- Mỹ phẩm -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_cosmetics"
                            android:backgroundTint="#E3F2FD"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_cosmetics"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Cosmetics"
                            android:textColor="#E91E63"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_amount_cosmetics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:layout_marginEnd="6dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F1F1F1" />

                    <!-- Tiền nhà -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_rent"
                            android:backgroundTint="#E0F2F1"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_rent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Rent"
                            android:textColor="#E91E63"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_amount_rent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:layout_marginEnd="6dp" />
                    </LinearLayout>

                    <!-- Y tế -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_healthcare"
                            android:backgroundTint="#E0F2F1"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_healthcare"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Healthcare"
                            android:textColor="#E91E63"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_amount_healthcare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:layout_marginEnd="6dp" />
                    </LinearLayout>

                    <!-- Giáo dục -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_education"
                            android:backgroundTint="#E0F2F1"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_education"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Education"
                            android:textColor="#E91E63"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_amount_education"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:layout_marginEnd="6dp" />
                    </LinearLayout>

                    <!-- Tiền điện -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_electricity"
                            android:backgroundTint="#E0F2F1"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_electricity"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Electricity"
                            android:textColor="#E91E63"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_amount_electricity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:layout_marginEnd="6dp" />
                    </LinearLayout>

                    <!-- Đi lại -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_transportation"
                            android:backgroundTint="#E0F2F1"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_transportation"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Transportation"
                            android:textColor="#E91E63"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_amount_transportation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:layout_marginEnd="6dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
