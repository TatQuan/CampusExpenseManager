<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Amount -->
    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="120.000 VND"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvDate"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"/>

    <!-- Ngày -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-11-23"
        android:textSize="12sp"
        android:textColor="#777777"
        app:layout_constraintTop_toTopOf="@+id/tvAmount"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Badge Recurring -->
    <TextView
        android:id="@+id/tvRecurring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Monthly"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_recurring"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvAmount"
        app:layout_constraintStart_toStartOf="@+id/tvAmount"
        android:layout_marginTop="4dp"/>

    <!-- Category / Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ăn trưa"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvAmount"
        app:layout_constraintTop_toBottomOf="@+id/tvRecurring"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
